@page "/Account/login"
<h3>Login</h3>

<div class="container">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h4>Mi Tienda</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title text-center">Iniciar Sesión</h5>
                <div class="col-md-12 mb-3">
                    <label>Usuario</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="col-md-12 mb-3">
                    <label>Contraseña</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" />
                        <label class="form-check-label">Mantener la sesión iniciada</label>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <a href="#" class="btn btn-primary btn-block">Iniciar</a>
                </div>
                <div class="col-md-12 mb-3">
                    <a href="/Account/recoverpassword">¿Olvidastes tu contraseña?</a>
                </div>
                <div class="col-md-12 mb-3">
                    <hr />
                </div>
                <div class="col-md-12 mb-3">
                    <h5>¿Aun no tienes una cuenta?</h5>
                </div>
                <div class="col-md-12 mb-3">
                    <a href="/Account/register" class="btn btn-success btn-block">Registrarme</a>
                </div>

            </div>
        </div>
    </div>

</div>


